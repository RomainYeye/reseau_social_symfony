{% extends 'base.html.twig' %}

{% block title %}Publier{% endblock %}

{% block body %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="mb-3">
            <div class="row">
                <div class="col-auto my-auto">
                    You are logged in as {{ app.user.username }} 
                </div>
                <div class="col-2 ml-auto">
                    <a class="btn btn-danger w-100" href="{{ path('app_logout') }}">Logout</a>
                </div>
            </div>
        </div>
    {% endif %}

    <h1>Ajouter une nouvelle publication</h1>
    {{ form_start(formPublication) }}
        {{ form_widget(formPublication) }}
    {{ form_end(formPublication) }}

{% endblock %}
